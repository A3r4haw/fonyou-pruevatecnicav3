    <!-- Interceptor para log de salida. -->
    <beans:bean id="loggingOutInterceptor" class="org.apache.cxf.interceptor.LoggingOutInterceptor" />
 
    <!-- Interceptor para log de entrada. -->
    <beans:bean id="loggingInInterceptor" class="org.apache.cxf.interceptor.LoggingInInterceptor" />
    
    <!-- Cliente de servicio web com CXF. -->
    <jaxws:client id="RecetaSAFWSService"
                  serviceClass="mx.com.dimesa.ws.client.service.SAFWSService_Client"
                  address="http://wssafinterfacesqa.dimesa.com.mx/RecetaSAFWSService.svc">  
        <!-- LLeva al archivo de LOG es SOAP response del servicio invocado. -->
        <jaxws:inInterceptors>
            <ref bean="loggingInInterceptor"/>
        </jaxws:inInterceptors>
        <!-- LLeva al archivo de LOG es SOAP request de invocacion. -->
        <jaxws:outInterceptors>
            <ref bean="loggingOutInterceptor"/>
        </jaxws:outInterceptors>
    </jaxws:client>
                  

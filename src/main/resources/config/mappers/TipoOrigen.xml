<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="mx.mc.mapper.TipoOrigenMapper" >
     
    <select id="obtenerLista" resultType="mx.mc.model.TipoOrigen" parameterType="mx.mc.model.TipoOrigen" >
        SELECT * FROM tipoOrigen WHERE activo = 1
    </select>
    
    <select id="existeOrigen" resultType="mx.mc.model.TipoOrigen" parameterType="mx.mc.model.TipoOrigen" >
        SELECT *
        FROM tipoOrigen
        WHERE 1=1
        <if test=" idTipoOrigen != null ">
            AND idTipoOrigen = #{ idTipoOrigen , jdbcType = INTEGER }
        </if>
    </select>
    
</mapper>